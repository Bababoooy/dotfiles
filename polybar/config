[module/spotify]
type = custom/script
exec = ~/.config/polybar/scripts/spotify.sh
interval = 1

format-online = <label>  <icon-prev> <icon-stop> <toggle> <icon-next> <icon-random>
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 2
;format-underline = #0f0
format-prefix = "阮 "
format-prefix-foreground = #0f0
label = %output:0:26%



[module/time]
type = custom/script
exec = date '+%I:%M %p'
interval = 5
format =  <label>
format-suffix = " "
format-foreground = ${colors.foreground}
;format-background = #F05454
format-prefix = "  "
format-prefix-foreground = #b08d04
label = "%output%"
click-left = notify-send -i ~/.config/polybar/scripts/calender.png "`date +'%A %d %B %Y'`"



[module/backlight]
type = internal/xbacklight

; XRandR output to get get values from
; Default: the monitor defined for the running bar
output = eDP1

; Create scroll handlers used to set the backlight value
; Default: true
enable-scroll = false

; Available tags:
;   <label> (default)
;   <ramp>
;   <bar>
format = <ramp><label>

;format-background = #8d62a9
format-foreground = ${colors.foreground}
format-prefix = " "
format-suffix = " "
; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Only applies if <ramp> is used
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-foreground = #CBB200


[module/weather]
type = custom/script
exec = curl -s 'https://wttr.in/?format=%c%t' | cut -c 1-20
click-left = chromium -e wttr.in 
interval = 120
format = <label>
format-prefix = " "
format-suffix = " "
;format-background = #F05454
format-foreground = ${colors.foreground}
label = %output%



